<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/main_space_half_8"
    android:layout_marginVertical="@dimen/main_space_half_8"
    card_view:cardCornerRadius="@dimen/main_space_half_8"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivCategoryImage"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:contentDescription="@string/category_image_description"
            android:scaleType="centerCrop"
            tools:src="@drawable/burger" />

        <TextView
            android:id="@+id/tvCategoryName"
            style="@style/StyleMainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Бургеры" />

        <TextView
            android:id="@+id/tvCategoryDescription"
            style="@style/StyleCategoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Рецепты всех популярных видов бургеров" />

    </LinearLayout>


</androidx.cardview.widget.CardView>

